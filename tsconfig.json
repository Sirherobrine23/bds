{
  "include": [
    "web_src/js/**/*",
  ],
  "exclude": [
    "web_src/js/**/*.js",
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": false,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowJs": true,
    "composite": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.AsyncIterable",
      "DOM.Iterable"
    ],
    "types": [
      "./web_src/js/types.d.ts"
    ]
  }
}
